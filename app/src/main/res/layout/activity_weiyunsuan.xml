<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridlayout1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:columnCount="1"
    android:rowCount="10"
    android:background="#FFFFFF"
    >

    <TableRow
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/n1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="运算数1"
            />
        <EditText
            android:id="@+id/n1_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="7"
            />

    </TableRow>
    <TableRow
    android:layout_row="1"
    android:layout_column="0"
    android:layout_gravity="fill"
    android:layout_rowWeight="1"
    >

    <TextView
        android:id="@+id/op"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="运算类型"
        />

        <EditText
            android:id="@+id/op_edit"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:maxLength="2"
            android:singleLine="true" />

</TableRow>
    <TableRow
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/n2"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="运算数2"
            />
        <EditText
            android:id="@+id/n2_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="10"
            />

    </TableRow>
    <TableRow
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/result"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="结果"
            />
        <EditText
            android:id="@+id/result_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >

        <Button
            android:id="@+id/but_not"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="~" />
        <Button
            android:id="@+id/backspace"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="←"
            />
        <Button
            android:id="@+id/clean_all"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="清空"
            />
        <Button
            android:id="@+id/enter"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Enter"
            />


    </TableRow>

    <TableRow
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_and"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="&amp;"
            />

        <Button
            android:id="@+id/but_or"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="|"
            />

        <Button
            android:id="@+id/but_shiftleft"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="&lt;&lt;" />
        <Button
            android:id="@+id/but_shiftright"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text=">>"
            />

    </TableRow>

    <TableRow
        android:layout_row="6"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/but_7"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/but_8"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/but_9"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9" />

        <Button
            android:id="@+id/but_f"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="F" />

    </TableRow>

    <TableRow
        android:layout_row="7"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/but_4"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/but_5"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/but_6"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/but_e"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="E" />

    </TableRow>

    <TableRow
        android:layout_row="8"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/but_1"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/but_2"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/but_3"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/but_d"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="D" />

    </TableRow>

    <TableRow
        android:layout_row="9"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/but_0"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/but_a"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="A" />

        <Button
            android:id="@+id/but_b"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="B" />

        <Button
            android:id="@+id/but_c"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="C" />

    </TableRow>




</GridLayout>



