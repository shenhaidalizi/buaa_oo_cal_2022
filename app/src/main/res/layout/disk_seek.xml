<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridlayout1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:columnCount="1"
    android:rowCount="11"
    android:background="#FFFFFF"
    >

    <TableRow
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/initialTrack_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="磁头初始位置"
            />

        <EditText
            android:id="@+id/initialTrack_edit"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:maxLength="100"
            android:singleLine="true" />

    </TableRow>
    <TableRow
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/tracks_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="磁盘请求队列"
            />

        <EditText
            android:id="@+id/tracks_edit"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:maxLength="100"
            android:singleLine="true" />

    </TableRow>

    <TableRow
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/process_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="磁头运动过程"
            />

        <EditText
            android:id="@+id/process_edit"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:maxLength="100"
            android:singleLine="true" />

    </TableRow>
    <TableRow
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/length_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="总巡道长度"
            />

        <EditText
            android:id="@+id/length_edit"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:maxLength="100"
            android:singleLine="true" />

    </TableRow>

    <TableRow
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/aveLength_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="平均寻道长度"
            />

        <EditText
            android:id="@+id/aveLength_edit"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:maxLength="100"
            android:singleLine="true" />

    </TableRow>


    <TableRow
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >

        <Button
            android:id="@+id/backspace"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="←"
            />
        <Button
            android:id="@+id/clean_all"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="RESET"
            />

    </TableRow>

    <TableRow
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_7"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            />

        <Button
            android:id="@+id/but_8"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            />

        <Button
            android:id="@+id/but_9"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            />
        <Button
            android:id="@+id/but_fcfs"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="FCFS"
            />

    </TableRow>
    <TableRow
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_4"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            />

        <Button
            android:id="@+id/but_5"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            />

        <Button
            android:id="@+id/but_6"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            />
        <Button
            android:id="@+id/but_sstf"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="SSTF"
            />

    </TableRow>
    <TableRow
        android:layout_row="9"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/but_1"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/but_2"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/but_3"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/but_scan"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="SCAN" />

    </TableRow>
    <TableRow
        android:layout_row="10"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_0"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="0"
            />

        <Button
            android:id="@+id/but_comma"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="," />

        <Button
            android:id="@+id/but_enter"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="enter"
            />
        <Button
            android:id="@+id/but_cscan"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="C-SCAN"
            />

    </TableRow>

</GridLayout>