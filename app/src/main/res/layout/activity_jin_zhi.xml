<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridlayout1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:columnCount="1"
    android:rowCount="9"
    android:background="#FFFFFF"
    >

    <TableRow
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/sixteen_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="十六进制"
            />
        <EditText
            android:id="@+id/sixteen_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="7"
            />

    </TableRow>
    <TableRow
    android:layout_row="1"
    android:layout_column="0"
    android:layout_gravity="fill"
    android:layout_rowWeight="1"
    >

    <TextView
        android:id="@+id/ten_text"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="十进制"
        />
    <EditText
        android:id="@+id/ten_edit"
        android:layout_weight=".3"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:maxLength="9"
        />

</TableRow>
    <TableRow
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/eight_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="八进制"
            />
        <EditText
            android:id="@+id/eight_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="10"
            />

    </TableRow>
    <TableRow
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/two_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="二进制"
            />
        <EditText
            android:id="@+id/two_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >

        <Button
            android:id="@+id/backspace"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="←"
            />
        <Button
            android:id="@+id/clean_all"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="清空"
            />


    </TableRow>
    <TableRow
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_7"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            />

        <Button
            android:id="@+id/but_8"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            />

        <Button
            android:id="@+id/but_9"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            />
        <Button
            android:id="@+id/but_f"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="F"
            />

    </TableRow>
    <TableRow
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_4"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            />

        <Button
            android:id="@+id/but_5"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            />

        <Button
            android:id="@+id/but_6"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            />
        <Button
            android:id="@+id/but_e"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="E"
            />

    </TableRow>
    <TableRow
        android:layout_row="7"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/but_1"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/but_2"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/but_3"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/but_d"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="D" />

    </TableRow>
    <TableRow
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/but_0"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="0"
            />

        <Button
            android:id="@+id/but_a"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="A"
            />

        <Button
            android:id="@+id/but_b"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="B"
            />
        <Button
            android:id="@+id/but_c"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="C"
            />

    </TableRow>



</GridLayout>



