<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridlayout1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:columnCount="1"
    android:rowCount="11"
    android:background="#FFFFFF"
    >

    <TableRow
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/mi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="米(m)"
            />
        <EditText
            android:id="@+id/mi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/kmi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="千米(km)"
            />
        <EditText
            android:id="@+id/kmi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/fenmi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="分米(dm)"
            />
        <EditText
            android:id="@+id/fenmi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/limi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="厘米(cm)"
            />
        <EditText
            android:id="@+id/limi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/haomi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="毫米(mm)"
            />
        <EditText
            android:id="@+id/haomi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >
        <TextView
            android:id="@+id/weimi_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微米(um)"
            />
        <EditText
            android:id="@+id/weimi_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        >
        <TextView
            android:id="@+id/nami_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="纳米(nm)"
            />
        <EditText
            android:id="@+id/nami_edit"
            android:layout_weight=".3"
            android:layout_height="match_parent"
            android:singleLine="true"
            />

    </TableRow>
    <TableRow
        android:layout_row="7"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/number7"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/number8"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/number9"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9" />


    </TableRow>
    <TableRow
        android:layout_row="8"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/number4"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            />

        <Button
            android:id="@+id/number5"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            />

        <Button
            android:id="@+id/number6"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            />


    </TableRow>
    <TableRow
        android:layout_row="9"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight=".8"
        >
        <Button
            android:id="@+id/number1"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="1"
            />

        <Button
            android:id="@+id/number2"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="2"
            />

        <Button
            android:id="@+id/number3"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="3"
            />

    </TableRow>
    <TableRow
        android:layout_row="10"
        android:layout_rowWeight=".8"
        android:layout_column="0"
        android:layout_gravity="fill">

        <Button
            android:id="@+id/number0"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/dot"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="." />

        <Button
            android:id="@+id/clean_all"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="C" />


    </TableRow>



</GridLayout>



